<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="30">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/movieCoverImageView"
                android:layout_width="120dp"
                android:layout_height="match_parent"
                android:paddingStart="10dp"
                android:paddingEnd="10dp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:paddingTop="10dp"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/movieRuntimeAndRatedTextView"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:paddingStart="10dp"
                    android:paddingEnd="10dp"
                    android:text="2hr 31min | R"
                    android:gravity="center_vertical"
                    android:textColor="@android:color/black"
                    android:textStyle="bold"
                    android:textSize="15sp"/>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical">

                    <TextView
                        android:id="@+id/genreTextView"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:paddingStart="10dp"
                        android:text="Genre: "
                        android:textColor="@android:color/black"
                        android:textStyle="bold"
                        android:textSize="15sp"
                        android:gravity="center_vertical"
                        android:layout_alignTop="@+id/movieGenreTextView"/>

                    <TextView
                        android:id="@+id/movieGenreTextView"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:paddingEnd="20dp"
                        android:text="Comedy, Action, Romance"
                        android:textColor="@android:color/black"
                        android:textSize="15sp"
                        android:gravity="center_vertical"
                        android:layout_toRightOf="@+id/genreTextView"/>
                </RelativeLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:paddingStart="10dp"
                        android:text="Director: "
                        android:gravity="center_vertical"
                        android:textColor="@android:color/black"
                        android:textStyle="bold"
                        android:textSize="15sp"/>

                    <TextView
                        android:id="@+id/movieDirectorTextView"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:paddingEnd="20dp"
                        android:text="Some guy"
                        android:gravity="center_vertical"
                        android:textColor="@android:color/black"
                        android:textSize="15sp"/>
                </LinearLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical">

                    <TextView
                        android:id="@+id/languageTextView"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:paddingStart="10dp"
                        android:text="Language: "
                        android:textColor="@android:color/black"
                        android:textStyle="bold"
                        android:textSize="15sp"
                        android:gravity="center_vertical"
                        android:layout_alignTop="@+id/movieLanguageTextView"/>

                    <TextView
                        android:id="@+id/movieLanguageTextView"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:paddingEnd="20dp"
                        android:text="Comedy, Action, Romance"
                        android:textColor="@android:color/black"
                        android:textSize="15sp"
                        android:gravity="center_vertical"
                        android:layout_toRightOf="@+id/languageTextView"/>
                </RelativeLayout>

            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:paddingTop="10dp"
        android:paddingBottom="20dp"
        android:paddingStart="30dp"
        android:paddingEnd="30dp"
        android:layout_height="0dp"
        android:layout_weight="70">

        <TextView
            android:id="@+id/moviePlotTextView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scrollbars="vertical"/>

    </LinearLayout>
</LinearLayout>